# Universal config for text editors
# https://EditorConfig.org

# top-most EditorConfig file
# Set to true to stop .editorconfig files search on current file.
root = true

[*]
insert_final_newline = true
charset = utf-8

[{Makefile, Makefile.*, *.mk}]
indent_style = tab
indent_size = 4

[{*.cpp, *.c, *.h, *.hpp}]
indent_style = space
indent_size = 4
max_line_length = 120

[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf

[*.md]
indent_style = space
indent_size = 4
max_line_length = 140
